{
  "name": "beeline-driver",
  "version": "1.0.0",
  "description": "Driver app for the Beeline bus service",
  "scripts": {
    "lint": "eslint --fix beeline-driver/",
    "sass": "node-sass scss/ionic.app.scss www/css/ionic.app.css",
    "sass-watch": "node-sass scss/ionic.app.scss www/css/ionic.app.css --watch",
    "webpack": "webpack",
    "webpack-watch": "webpack --watch -d",
    "build": "npm run sass && npm run webpack",
    "watch": "npm run start & npm run sass-watch & npm run webpack-watch",
    "prestart": "npm run build",
    "start": "http-server www/",
    "heroku-postbuild": "npm run build",
    "gh-pages": "gh-pages -d www",
    "hcp": "cordova-hcp build",
    "deploy-android": "node scripts/deploy-android.js",
    "deploy-ios": "node scripts/deploy-ios.js",
    "deploy": "npm run hcp & npm run gh-pages"
  },
  "author": "Government Technology Agency of Singapore (https://www.tech.gov.sg)",
  "license": "MIT",
  "dependencies": {
    "angular-simple-logger": "^0.1.7",
    "angular-translate": "^2.11.0",
    "angular-translate-loader-static-files": "^2.11.0",
    "compare-versions": "^2.0.2",
    "cordova": "^6.5.0",
    "cordova-ios": "^4.5.5",
    "install": "^0.8.1",
    "ionic": "^3.12.0",
    "jsonwebtoken": "^5.7.0",
    "lodash": "^4.11.1"
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "cordova-plugin-statusbar",
    "ionic-plugin-keyboard",
    "cordova-plugin-geolocation",
    "cordova-plugin-insomnia",
    "cordova-plugin-app-version",
    "cordova-hot-code-push-plugin",
    "cordova-plugin-network-information"
  ],
  "cordovaPlatforms": [
    "android",
    "ios"
  ],
  "devDependencies": {
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-3": "^6.5.0",
    "cordova-hot-code-push-cli": "^1.1.1",
    "gh-pages": "^0.12.0",
    "html-loader": "^0.4.3",
    "http-server": "^0.11.0",
    "json-loader": "^0.5.4",
    "node-sass": "^3.14.0-0",
    "webpack": "^1.13.0"
  }
}
